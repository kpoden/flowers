                use(xlink:href="images/sprite.svg#shop")
            span добавить к заказу
            
    .feeding
        img(src = "images/modal/4.png")
        h2.modal__header Подкормка <br> для цветов
        p.modal__text Бесплатно при покупке букета
        a.modal__btn.btn
            svg(width="20" height="20")
                use(xlink:href="images/sprite.svg#shop")
            span добавить к заказу


    .card
        img.cardSmall(src="images/modal/5.png")
        img.cardBig.hidden(src="images/modal/6.png")
        h2.modal__header Открытка

        .modal__radios
            
            label.modal__radio
                input(type="radio", name="lenght" data-cardsize="small")
                span.modal__dot.dot
                span.modal__name Открытка букетная (бесплатно)
            label.modal__radio
                input(type="radio", name="lenght"  data-cardsize="big" data-price=70)
                span.modal__dot.dot
                span.modal__name Открытка большая / +70 ₽

        .modal__textareaWrap.textAreaBig
            p Текст пожелания (не обязательно)
            textarea.modal__textarea.textAreaSmall(noresize placeholder="Введите текст пожелания")
            textarea.modal__textarea.textAreaBig.hidden(noresize placeholder="Введите текст пожелания")
            span.modal__counter
            


        a.modal__btn.btn
            svg(width="20" height="20")
                use(xlink:href="images/sprite.svg#shop")
            span добавить к заказу


