.modal
    .modal__content
        .modal__close-cross.modal__close
        .modal__content-inner
            img.addedItemImg(src = "")
            h2.modal__header Товар добавлен <br> в корзину

            a.modal__btn.btn.addedItemBtn(href="/cart")
                svg(width="20" height="20")
                    use(xlink:href="images/sprite.svg#shop")
